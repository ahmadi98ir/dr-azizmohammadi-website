NEXT_PUBLIC_BASE_URL=https://drazizmohammadi.ir

# Enforce canonical host + HTTPS in middleware (recommended in production)
CANONICAL_HOST=drazizmohammadi.ir

# Choose one provider mode
# SMS_PROVIDER=smsir
SMS_PROVIDER=smsir_ultrafast

# SMS.ir common
SMSIR_API_KEY=YOUR_SMSIR_API_KEY

# For plain send mode
SMSIR_SEND_URL=https://api.sms.ir/vX/your/send/endpoint
SMSIR_LINE_NUMBER=3000xxxx

# For Ultra Fast (template) mode
SMSIR_TEMPLATE_ID=268536
SMSIR_VERIFY_URL=https://api.sms.ir/v1/send/verify

# Database (Prisma)
# Set to 1 to enable Prisma runtime (PostgreSQL recommended for production)
USE_PRISMA=1
# For PostgreSQL (Coolify internal URL example)
DATABASE_URL=postgresql://postgres:password@hostname:5432/postgres
