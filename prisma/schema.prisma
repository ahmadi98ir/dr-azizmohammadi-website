generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  name         String
  email        String?  @unique
  phone        String?  @unique
  role         String   // 'patient' | 'admin'
  passwordHash String?
  passwordSalt String?
  createdAt    DateTime @default(now())
  appointments Appointment[]
  sessions     Session[]
  messagesSent Message[]
}

model Session {
  token     String   @id
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  expiresAt DateTime
}

model Appointment {
  id         String    @id @default(cuid())
  patient    User?     @relation(fields: [patientId], references: [id])
  patientId  String?
  date       DateTime
  type       String    // 'visit' | 'consult'
  status     String    // 'open' | 'pending' | 'approved' | 'rejected' | 'cancelled' | 'completed'
  note       String?
  createdAt  DateTime  @default(now())
  messages   Message[]
  payments   Payment[]
}

model Message {
  id            String      @id @default(cuid())
  appointment   Appointment @relation(fields: [appointmentId], references: [id])
  appointmentId String
  sender        User        @relation(fields: [senderId], references: [id])
  senderId      String
  text          String
  createdAt     DateTime    @default(now())
}

model Payment {
  id            String      @id @default(cuid())
  appointment   Appointment @relation(fields: [appointmentId], references: [id])
  appointmentId String
  amount        Int
  status        String      // 'initiated' | 'paid' | 'failed' | 'cancelled'
  authority     String?
  createdAt     DateTime    @default(now())
  paidAt        DateTime?
}

model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String
  published Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Faq {
  id        String   @id @default(cuid())
  question  String
  answer    String
  createdAt DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  actorId   String?
  action    String
  resource  String?
  meta      Json?
  createdAt DateTime @default(now())
}
